---
interface Props {
	title: string;
	img: string;
	caption: string;
	link?: string | null;
}

const { title, caption, img, link ="#" } = Astro.props;
---

<div class="p-4 w-full flex flex-row justify-center lg:block lg:w-1/3">
    <div class="bg-slate-700 px-4 py-4 rounded-2xl shadow-lg lg:max-w-[18rem]">
        <div class="px-4">
            <img class="w-full aspect-video h-40 object-cover object-top border-2 border-slate-600 rounded-2xl shadow-lg" src={img} alt={caption}>
        </div>
        <div class="pt-4">
            <h2 class="font-bold text-xl text-slate-200">{title}</h2>
            <p class="text-slate-300">
                {caption}
            </p>
            <div class="mt-2 flex flex=row justify-end">
                <a href={link} class="relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-cyan-500 to-blue-500 group-hover:from-cyan-500 group-hover:to-blue-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-cyan-200 dark:focus:ring-cyan-800">
                    <span
                        class="relative px-2 py-1.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">
                        Read More
                    </span>
                </a>
            </div>
        </div>
    </div>
</div>